#include <stdio.h>
#include <math.h>

int main ()
{
	float k;
	int p,a,n;
	a=2;
	printf("Powers of 2\n");
	printf("Enter k : ");
	scanf("%f",&k);
	p=0;
	n=k;
	if (a>k) printf("k cannot be smaller than %d",a);
	else if (fmodf(k,a)==0) 
	{
		while(a<=k)
		{
			p++;
			k=k/a;
		}	
		printf("%d = %d to the power of %d",n,a,p);
	}
	else printf("k cannot be divided by %d",a);
	return 0;
}
