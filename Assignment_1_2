#include <stdio.h>
int main (void)
{
	int c=5, d;
	float a=5, b;
	printf("b = ");
	scanf("%f", &b);
	printf("d = ");
	scanf("%d", &d);
	printf("a = %5.2f\t b = %5.2f\t c = %d\t d = %d\n", a,b,c,d);
	a += b-2;
	printf("a = %5.2f\t b = %5.2f\t c = %d\t d = %d\n", a,b,c,d);
	c++;
	d = c - a + d;
	printf("a = %5.2f\t b = %5.2f\t c = %d\t d = %d\n", a,b,c,d);
	a = a*c;
	c--;
	printf("a = %5.2f\t b = %5.2f\t c = %d\t d = %d\n", a,b,c,d);
	a = a/10; 
	c = c/2;
	b--;
	d = d*(c+b+a);
	printf("a = %5.2f\t b = %5.2f\t c = %d\t d = %d\n", a,b,c,d);
	return 0;
}
